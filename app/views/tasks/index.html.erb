<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Impact</th>
    <th>Name</th>
    <th>Karma points</th>
    <th>Charisma points</th>
    <th>Green points</th>
    <th>Simplicity points</th>
    <th>Links</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.impact %></td>
    <td><%= task.name %></td>
    <td><%= task.karma_points %></td>
    <td><%= task.charisma_points %></td>
    <td><%= task.green_points %></td>
    <td><%= task.simplicity_points %></td>
    <td><%= task.links %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

